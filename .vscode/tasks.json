{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build MF6 (ifort)",
            "command": "${workspaceFolder}/.vscode/run_python.sh",
            "windows": {
                "command": "${workspaceFolder}/.vscode/run_python.cmd",
                "args": [
                    "${workspaceFolder}/.vscode/build_vscode.py",
                    "--compiler",
                    "ifort",
                    "build",
                ],                
                "problemMatcher": "$msCompile"
            },
            "args": [
                "${workspaceFolder}/.vscode/build_vscode.py",
                "--compiler",
                "ifort",
                "build",
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Rebuild MF6 (ifort)",
            "command": "${workspaceFolder}/.vscode/run_python.sh",
            "windows": {
                "command": "${workspaceFolder}/.vscode/run_python.cmd",
                "args": [
                    "${workspaceFolder}/.vscode/build_vscode.py",
                    "--compiler",
                    "ifort",
                    "rebuild",
                ],
                "problemMatcher": "$msCompile",
            },
            "args": [
                "${workspaceFolder}/.vscode/build_vscode.py",
                "--compiler",
                "ifort",
                "rebuild",
            ],
            "group": "build",            
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build MF6 (gfortran)",
            "command": "${workspaceFolder}/.vscode/run_python.sh",
            "windows": {
                "command": "${workspaceFolder}/.vscode/run_python.cmd",
                "args": [
                    "${workspaceFolder}/.vscode/build_vscode.py",
                    "--compiler",
                    "gfortran",
                    "build",
                ],                
                "problemMatcher": "$msCompile"
            },
            "args": [
                "${workspaceFolder}/.vscode/build_vscode.py",
                "--compiler",
                "gfortran",
                "build",
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Rebuild MF6 (gfortran)",
            "command": "${workspaceFolder}/.vscode/run_python.sh",
            "windows": {
                "command": "${workspaceFolder}/.vscode/run_python.cmd",
                "args": [
                    "${workspaceFolder}/.vscode/build_vscode.py",
                    "--compiler",
                    "gfortran",
                    "rebuild",
                ],
                "problemMatcher": "$msCompile",
            },
            "args": [
                "${workspaceFolder}/.vscode/build_vscode.py",
                "--compiler",
                "gfortran",
                "rebuild",
            ],
            "group": "build",            
            "problemMatcher": "$gcc"
        },
    ]
}
