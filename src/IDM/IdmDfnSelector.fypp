    type(InputParamDefinitionType), dimension(:), pointer :: def
    nullify (def)
    select case (subcomponent)
    #:for p in [pkg for pkg in PACKAGES if pkg.startswith(m)]
    case ('${p.replace('-', '').replace(m, '').upper()}$')
      call ${m}$_set_param_pointer(def, ${p.replace('-', '_')}$_param_definitions)
    #:endfor
    case default
    end select
    return
  end function ${m}$_param_definitions
  #:endfor

