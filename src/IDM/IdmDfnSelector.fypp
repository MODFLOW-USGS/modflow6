    nullify (def)
    select case (subcomponent)
    #:for p in [pkg for pkg in PACKAGES if pkg.startswith(m)]
    case ('${p.replace('-', '').replace(m, '').upper()}$')
      call ${m}$_set_param_pointer(def, ${p.replace('-', '_')}$_aggregate_definitions)
