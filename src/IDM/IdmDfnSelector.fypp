  function exg_block_definitions(subcomponent) result(def)
    character(len=*), intent(in) :: subcomponent
    type(InputBlockDefinitionType), dimension(:), pointer :: def
    nullify (def)
    select case (subcomponent)
    #:for e in EXCHANGES
    #:set l = e.split('-')[0]
    #:set r = e.split('-')[1]
    case ('${l.upper()}$${r.upper()}$')
